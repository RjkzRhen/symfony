{% extends 'base.html.twig' %}

{% block title %}{{ property.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">{{ property.title }}</h1>
        <div class="row">
            <div class="col-md-6">
                <img src="{{ asset('images/properties/' ~ property.image) }}" class="img-fluid" alt="{{ property.title }}">
            </div>
            <div class="col-md-6">
                <h3>Описание</h3>
                <p>{{ property.description }}</p>
                <ul class="list-group">
                    <li class="list-group-item">Комнат: {{ property.rooms }}</li>
                    <li class="list-group-item">Площадь: {{ property.area }} м²</li>
                    <li class="list-group-item">Цена: {{ property.price }} ₽</li>
                </ul>
                <a href="{{ path('property_index') }}" class="btn btn-secondary mt-3">Назад к списку</a>
            </div>
        </div>
    </div>
{% endblock %}