{% extends 'base.html.twig' %}

{% block title %}Подтверждение 2FA{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center">Подтверждение 2FA</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="code">Введите код:</label>
                                <input type="text" id="code" name="code" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Подтвердить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}